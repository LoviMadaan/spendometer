<% if current_user %>
  <div class="container-fluid d-flex flex-column align-items-center">
    <% unless @groups.empty? %>
      <% @groups.each do |group| %>
        <div class="card d-flex flex-column mt-2 mb-1" style="width: 95%;">
          <div class="card-body d-flex flex-column">
            <div>
              <img src=<%= group.icon %> class="category-icon me-2" alt="category icon">
            </div>
            <div class="w-75 d-flex justify-content-between align-items-center mx-2">
              <div class="d-flex justify-content-center">
                <%= link_to "#{group.name}", group_path(group.id), class:"card-title category-name fs-5 stretched-link" %>
                <p class="card-text d-flex mt-2"><small class="text-muted"><%=group.created_at.strftime("%d %b %Y")%></small></p>
              </div> 
              <p class="card-text d-flex flex-column fw-semibold">&<%= group.entities.sum(:amount) %></p>             
        </div>
      <% end %>
    <% else %>
      <h3 class="mt-4">You don't have any categories yet.</h2>    
    <% end %>    
  </div>
  <div>
    <%= link_to 'Add a new Category', new_group_path, class: "scan-button" %>
    </div>
<% else %>
  <%= render partial: "shared/background" %>
<% end %> 
